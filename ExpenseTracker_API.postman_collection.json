								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 30.00,\n    \"description\": \"Updated description\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/expenses/:expense_id",
							"host": ["{{base_url}}"],
							"path": ["api", "expenses", ":expense_id"],
